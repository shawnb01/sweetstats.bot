generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model destinyCharacter {
  membershipId      String   @id
  membershipType    Int
  emblemPath        String
  name              String
  playerTitle       String
  light             Int
  artifactPower     Int
  raceClass         String
  seasonRank        Int
  timePlayedHours   Int
  timePlayedMinutes Int
  kdaPVP            String
  kdaPVE            String
  lastPlayed        String
  characterId       String
  createdAt         DateTime @default(now())
  updatedAt         DateTime
}

model guildPlayer {
  id                 String @id
  guildId            String
  displayName        String
  memberId           String
  destinyCharacterId String

  @@index([destinyCharacterId])
}

model guildPrefs {
  guildId   String @id
  channelId String
}
